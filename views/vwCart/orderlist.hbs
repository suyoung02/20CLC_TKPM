<form method="post" id="frmListCart">
    <div class="h-100 ">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-8 ">
                    <div class="card card-registration " style="border-radius: 15px;">
                        <div class="card-body shadow ">
                            <div>
                                <div class="col-lg-12">
                                    <div>
                                        <div class="d-flex mb-3">
                                            <h1 class="fw-bold mb-0 text-black">Đơn hàng</h1>
                                        </div>
                                        <hr class="my-4">
                                        <div class="overflow-auto" style="max-height: 400px">
                                            {{#each this.orderLists}}
                                                <div class="card-body shadow mb-4 d-flex justify-content-between" style="border-radius: 15px;padding: 5px">
                                                    <div class="">
                                                        <h6>Mã đơn hàng: #{{this.OrderID}}</h6>
                                                        <h6 class="text-black">Ngày đặt: {{dateFormat this.Dated "dddd, MMMM Do YYYY"}}</h6>
                                                        <h6 class="text-black">Hình thức thanh toán: {{this.Payment}}</h6>
                                                        <h6 class="text-black">Tổng tiền: {{format_number this.Total}}</h6>
                                                        {{#if (eq this.State 1)}}
                                                            <h6 class="text-black">Trạng thái: Pending</h6>
                                                        {{/if}}
                                                        {{#if (eq this.State 2)}}
                                                            <h6 class="text-black">Trạng thái: Arriving</h6>
                                                            Arriving
                                                        {{/if}}
                                                        {{#if (eq this.State 3)}}
                                                            <h6 class="text-black">Trạng thái: Success</h6>
                                                            Success
                                                        {{/if}}
                                                        {{#if (eq this.State 4)}}
                                                            <h6 class="text-black">Trạng thái: Canceled</h6>
                                                        {{/if}}
                                                    </div>
                                                    <button style="width: auto; height: auto" type="submit" class="btn btn-outline-danger" formaction="/cart/orderlist/detail?id={{this.OrderID}}">Xem chi tiết
                                                    </button>
                                                </div>
                                            {{/each}}
                                        </div>
                                        <div>
                                            <h6 class="mb-0"><a href="/" class="text-body"><i
                                                    class="fas fa-long-arrow-alt-left me-2"></i>Trở về home</a></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>