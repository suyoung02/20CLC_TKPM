<form method="post" id="frmCart">
    <div class="h-100 h-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12">
                    <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                        <div class="card-body shadow">
                            <div class="row g-0">
                                <div class="col-lg-8">
                                    <div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h1 class="fw-bold mb-0 text-black">Giỏ hàng</h1>
                                        </div>
                                        <hr class="my-4">
                                        <div class="row mb-4 d-flex justify-content-end">
                                            <div class="col-md-3">
                                                <h5 class="text-primary mb-0">SỐ LƯỢNG</h5>
                                            </div>
                                            <div class="col-md-3">
                                                <h5 class="text-primary mb-0">GIÁ TIỀN</h5>
                                            </div>
                                            <div style="width: 20px"></div>
                                        </div>
                                        <hr class="my-4">
                                        {{#each this.products}}
                                            <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                <div class="col-md-2 col-lg-2 col-xl-2">
                                                    <img
                                                            src="/public/image/{{this.ProID}}/main.jpg"
                                                            class="img-fluid rounded-3" alt="Sản phẩm">
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-3">
                                                    <h6 class="text-muted">{{this.catName}}</h6>
                                                    <h6 class="text-black mb-0">{{this.ProName}}</h6>
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                    <button class="btn btn-link px-2"
                                                            formaction="/cart/viewCart/down?id={{this.ProID}}">
                                                        <i class="fas fa-minus"></i>
                                                    </button>

                                                    <input id="form1" name="quantity" value="{{this.stockBuy}}" type="text"
                                                           class="form-control form-control-sm" />

                                                    <button class="btn btn-link px-2"
                                                            formaction="/cart/viewCart/up?id={{this.ProID}}">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-2 offset-lg-1">
                                                    <h6 class="mb-0">{{format_number this.Price}}</h6>
                                                </div>
                                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                    <button class="btn btn-lg btn-floating" type="submit" formaction="/cart/viewcart/del?id={{ProID}}" >
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        {{/each}}
                                        <hr class="my-4">
                                        <div class="pt-5">
                                            <h6 class="mb-0"><a href="/" class="text-body"><i
                                                    class="fas fa-long-arrow-alt-left me-2"></i>Trở về home</a></h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 bg-grey mt-5">
                                    <div class="mb-5"></div>
                                    <div class="p-5">
                                        <div class="mt-5"></div>
                                        <div class="d-flex justify-content-between mb-4">
                                            <h5 class="text-uppercase">Sản phẩm: {{this.lengthPro}}</h5>
                                        </div>

                                        <div class="d-flex justify-content-between mb-5">
                                            <h5 class="text-uppercase">Tổng tiền: {{format_number this.total}} vnđ</h5>
                                        </div>
                                        <hr class="my-4">
                                        <div class="d-grid gap-2">
                                            <a href="/cart/viewCart/payment" type="button" class="btn btn-dark btn-block btn-lg"
                                                    data-mdb-ripple-color="dark" style="text-decoration: none;color: #ffffff">Thanh toán
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>