<form method="post" id="frmCartDetail">
    <div class="h-100 ">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-8">
                    <div class="card card-registration" style="border-radius: 15px;">
                        <div class="card-body shadow">
                            <div>
                                <div class="col-lg-12">
                                    <div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h1 class="fw-bold mb-0 text-black">Chi tiết đơn hàng</h1>
                                        </div>
                                        <hr class="my-4">
                                        {{#each this.products}}
                                            <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                <div class="col-md-2 col-lg-2 col-xl-2">
                                                    <img
                                                            src="/public/image/{{this.ProID}}/main.jpg"
                                                            class="img-fluid rounded-3" alt="Sản phẩm">
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-3 col-lg-3 col-xl-3">
                                                    <h6 class="text-muted">{{this.catName}}</h6>
                                                    <h6 class="text-black mb-0">{{this.ProName}}</h6>
                                                </div>
                                                <div class="col-md-2 d-flex justify-content-between">
                                                    <h6>{{this.sk}}</h6>
                                                    <h6>x</h6>
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-2 offset-lg-1">
                                                    <h6 class="mb-0">{{format_number this.Price}}</h6>
                                                </div>
                                            </div>
                                        {{/each}}
                                        <hr class="my-4">
                                        <div class="d-flex flex-row-reverse ">
                                            <h5 class="text-uppercase">Tổng tiền: {{format_number this.total}} vnđ</h5>
                                        </div>
                                        <div class="pt-5">
                                            <h6 class="mb-0"><a href="/" class="text-body"><i
                                                    class="fas fa-long-arrow-alt-left me-2"></i>Trở về home</a></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>