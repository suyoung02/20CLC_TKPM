<div class="card" style="margin-top: 100px;">
    <div class="card-header d-flex justify-content-between">
        <h4>User</h4>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Email</th>
                <th>Dated</th>
                <th>Total</th>
                <th>Status</th>
                <th>Payment</th>
            </tr>
            </thead>
            <tbody>
            {{#each this.order}}
                <tr>
                    <td>{{Gmail}}</td>
                    <td>{{Dated}}</td>
                    <td>{{Total}}</td>
                    {{#if (eq State 1) }}
                        <td>Pending</td>
                    {{else if (eq State 2)}}
                        <td>Arriving</td>
                    {{else if (eq State 3)}}
                        <td>Success</td>
                    {{else if (eq State 4)}}
                        <td>Canceled</td>
                    {{/if}}
                    <td>{{Payment}}</td>
                    <form method="post">
                        {{#if (eq State 3)}}
                        {{else if (eq State 4)}}
                        {{else}}
                        <td class="text-right" style="width: 250px;">
                            <button
                                    type="submit"
                                    class="btn btn-sm btn-danger"
                                    formaction="/admin/order/cancel?id={{OrderID}}"
                            >
                            <i class="fa fa-trash" aria-hidden="true"></i>
                            Cancel
                            </button>
                        {{/if}}
                            {{#if (eq State 1)}}
                                <button
                                        type="submit"
                                        class="btn btn-sm btn-success"
                                        formaction="/admin/order/arriving?id={{OrderID}}"
                                >
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                Arriving
                                </button>
                            {{else if (eq State 2)}}
                                <button
                                        type="submit"
                                        class="btn btn-sm btn-success"
                                        formaction="/admin/order/success?id={{OrderID}}"
                                >
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                Success
                                </button>
                            {{/if}}
                        </td>
                    </form>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>