                                <ul class="dropdown-menu dropdown-submenu">
                                    {{#each ../lcCat}}
                                        {{#if (eq BigCatID ../BigCatID) }}
                                            <li>
                                                <a class="dropdown-item"
                                                   href="/products/byCat/{{CatID}}">{{CatName}}</a>
                                            </li>
                                        {{/if}}
                                    {{/each}}
                                </ul>
                            </li>
                        {{/each}}
                    </ul>
                </li>
