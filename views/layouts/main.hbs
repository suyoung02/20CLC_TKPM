                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                {{#if auth}}
                    <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    {{authUser.Name}}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    {{#if (eq authUser.Type 2)}}
                                        <li><a class="dropdown-item" href="/account/profile">Profile</a></li>
                                    {{else if (eq authUser.Type 1)}}
                                        <li><a class="dropdown-item" href="/teacher/profile">Profile</a></li>
                                    {{else if (eq authUser.Type 0)}}
                                        <li><a class="dropdown-item" href="/admin/categories">Admin page</a></li>
                                    {{/if}}
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <form action="/account/logout" id="frmLogout" method="post"></form>
                                    <li><a class="dropdown-item" href="javascript: $('#frmLogout').submit();">Log
                                        out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                {{else}}
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase" href="/account/login">Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase" href="/account/register">Register</a>
                    </li>
                {{/if}}

